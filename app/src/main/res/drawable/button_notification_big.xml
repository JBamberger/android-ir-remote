<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape>
            <solid android:color="@color/material_green_A400" />
            <stroke android:width="@dimen/button_border" android:color="@color/material_green_A700" />
        </shape>
    </item>

    <item android:state_focused="true"><!-- focused -->
        <shape>
            <solid android:color="@color/material_green_A200" />
            <stroke android:width="@dimen/button_border" android:color="@color/material_green_A400" />
        </shape>
    </item>

    <item android:state_hovered="true"><!-- hovered -->
        <shape>
            <solid android:color="@color/material_green_A100" />
            <stroke android:width="@dimen/button_border" android:color="@color/material_green_A200" />
        </shape>
    </item>

    <item><!-- default -->
        <shape>
            <solid android:color="@color/material_grey_200" />
        </shape>
    </item>
</selector>