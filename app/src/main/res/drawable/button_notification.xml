<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape>
            <solid android:color="@color/button_background_pressed" />
            <stroke android:width="@dimen/button_border" android:color="@color/button_border_pressed" />
        </shape>
    </item>

    <item android:state_focused="true"><!-- focused -->
        <shape>
            <solid android:color="@color/button_background" />
            <stroke android:width="@dimen/button_border" android:color="@color/button_border_focused" />
        </shape>
    </item>

    <item android:state_hovered="true"><!-- hovered -->
        <shape>
            <solid android:color="@color/button_background" />
            <stroke android:width="@dimen/button_border" android:color="@color/button_border_hovered" />
        </shape>
    </item>

    <item><!-- default -->
        <shape>
            <solid android:color="@color/button_background" />
        </shape>
    </item>
</selector>